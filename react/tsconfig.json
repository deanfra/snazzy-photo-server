{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "module": "es2015",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "../",
    "baseUrl": ".",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["@emotion/core", "@types/jest"],
    "paths": {
      "components/*": ["src/components/*"],
      "interfaces/*": ["../src/interfaces/*"]
    }
  },
  "typeRoots": ["node_modules/@types", "@types", "./src/custom.d.ts"],
  "includes": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["*.js", "node_modules", "dist"],
  "types": ["typePatches"],
  "plugins": [
    {
      "name": "typescript-styled-plugin"
    }
  ]
}
